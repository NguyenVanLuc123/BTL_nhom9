<main id="main" class="main">
    <% if (messages.Success) { %>
      <div class="alert alert-success" show-alert data-time="4000">
        <%= messages.Success %>
          <span close-alert style="margin-left: 25px; cursor: pointer;">X</span>
      </div>
      <% } %>
      <% if (messages.error) { %>
        <div class="alert alert-danger" show-alert data-time="4000">
          <%= messages.error %>
          <span close-alert style="margin-left: 25px; cursor: pointer;">X</span>
        </div>
      <% } %>
        <div class="pagetitle">
          <h1>Data Account</h1>
          <h2><%= manager.TenP%></h2>
        </div><!-- End Page Title -->
       
   
  
                <section class="section">
                    <div class="add-user">
                      <a data-bs-toggle="modal" data-bs-target="#modal<%=manager.MaP%>"  id_department=""
                        add_user class="btn btn-primary">ADD USER</a>
                        <%- include('../../partials/CreatAccount.ejs', { staffItem: manager }) %>
                    </div>
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="card">
                          <div class="card-body">
                            <table class="table datatable">
                              <thead>
                                <tr>
                                  <th><b>MANV</b></th>
                                  <th><b>Name</b></th>
                                  <th><b>office</b></th>
                                  <th><b>Username</b></th>
                                  <th><b>password</b></th>
                                  <th><b>DayCreat</b></th>
                                  <th><b>Action</b></th>
                                </tr>
                              </thead>
                              <tbody>
                                <% staff.forEach(function(staffItem) { %>
                                  <tr>
                                    <td>
                                      <%= staffItem.Manv %>
                                    </td>
                                    <td>
                                      <%= staffItem.TenNv %>
                                    </td>
                                    <td>
                                      <%= staffItem.Chucv %>
                                    </td>
                                    <td>
                                      <%= staffItem.username %>
                                    </td>
                                    <td>
                                      <%= staffItem.password %>
                                    </td>
                                    <td>
                                      <%= staffItem && staffItem.DayCreat instanceof Date ?
                                        staffItem.DayCreat.toISOString().split('T')[0] : '' %>
                                    </td>
                                    <td class="Hanh-dong">
                                      <a data-bs-toggle="modal" data-bs-target="#modal<%= staffItem.Manv %>" fix
                                        class="btn btn-outline-success" data-id="<%= staffItem.Manv %>"><i
                                          class="bi bi-gear-wide"></i></a>
                                          <%- include('../../partials/edit.ejs', { staffItem: staffItem }) %>
  
  
                                      <button type="button" data-id="<%=staffItem.Manv%>" data-MaP="<%=staffItem.MaP%>" button-deleted
                                        class="btn btnbtn btn-danger "><i class="bi bi-trash"></i></button>
                                    </td>
                                  </tr>
                                  <% }); %>
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>
                  </section>
      
        <form action="" method="post" id="form-deleted-button" data-path="<%= prefixManager %>/Account/deleted/"></form>
  </main><!-- End #main -->