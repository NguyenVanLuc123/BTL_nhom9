<main  id="main" class="main">
    <% if (messages.error) { %>
        <div class="alert alert-danger" show-alert data-time="4000">
          <%= messages.error %>
          <span close-alert style="margin-left: 25px; cursor: pointer;">X</span>
        </div>
      <% } %>
      
    <div class="container">
        <h2><%=title%> </h2>
        <form action="<%= prefixAdmin %>/Account/CreatAccount/<%= ID_department%>"   method="post"  >
            <div class="form-group">
                <label for="manv">Mã NV:</label>
                <input type="text" id="manv" name="MANV" value="" required>
            </div>

            <div class="form-group">
                <label for="name">Tên:</label>
                <input type="text" id="name" name="Name" value="" required>
            </div>

            <div class="form-group">
                <label for="office">Chúc VỤ:</label>
                <input type="text" id="office" name="office" value="" required>
            </div>

            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="Username" value="" required>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" value="" required>
            </div>

            <div class="actions "  >
              
                <input type="hidden" name="_method" value="post">
                <button type="submit" class="btn">Creat</button>
                <a href="<%= prefixAdmin %>/Account" class="btn btn-danger">Hủy</a>
            </div>
        </form>
    </div>
  
    
</main>