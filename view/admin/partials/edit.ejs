  <!-- Basic Modal -->
  <div class="modal fade" id="modal<%= staffItem.Manv %>" tabindex="-1" style="width: 500px;height: 680px; ">
    <div class="modal-dialog" style="margin: 0px;">
      <div class="modal-content">
        <div class="modal-body">
          <div>
            <h2>Nhập Thay Đổi </h2>
            <form action="<%= prefixAdmin %>/Account/edit/<%= staffItem.Manv %>?_method=PATCH"   method="post"  >
                <div class="form-group">
                    <label for="manv">Mã NV:</label>
                    <input type="text" id="manv" name="MANV" value="<%= staffItem ?staffItem.Manv : '' %>"readonly>
                </div>
    
                <div class="form-group">
                    <label for="name">Tên:</label>
                    <input type="text" id="name" name="Name" value="<%= staffItem ?staffItem.TenNv : '' %>" required>
                </div>
    
                <div class="form-group">
                    <label for="office">Chức vụ:</label>
                    <input type="text" id="office" name="office" value="<%= staffItem ? staffItem.Chucv : '' %>" required>
                </div>
    
                <div class="form-group">
                    <label for="inputEmail4">Username:</label>
                    <input type="email" id="inputEmail4" name="Username" value="<%= staffItem ? staffItem.username : '' %>" required>
                </div>
    
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" value="<%= staffItem ? staffItem.password : '' %>" required>
                </div>
    
                <div class="actions "  >
                    
                    <button type="submit" class="btn">update</button>
                    <a  data-bs-dismiss="modal" class="btn btn-danger">Hủy</a>
                </div>
            </form>
        </div>
      
        </div>
        
      </div>
    </div>
  </div><!-- End Basic Modal-->















   