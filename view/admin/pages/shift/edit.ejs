<main  id="main" class="main">
    <div class="container">
        <h2><%=title%> </h2>
        <form action="<%= prefixAdmin %>/Shift/edit/<%= staff[0].MaC %>?_method=PATCH"   method="post"  >
            <div class="form-group">
                <label for="MaC">Mã Ca:</label>
                <input type="text" id="MaC" name="MaC" value="<%= staff[0] ?staff[0].MaC : '' %>"readonly>
            </div>

            <div class="form-group">
                <label for="name">Tên Ca:</label>
                <input type="text" id="name" name="Name" value="<%= staff[0] ? staff[0].TenC : '' %>" required>
            </div>

            <div class="form-group">
                <label for="TimeIn">TimeIn:</label>
                <input type="time" id="TimeIn" name="TimeIn" value="<%= staff[0]?staff[0].timeIn : '' %>" required>
            </div>

            <div class="form-group">
                <label for="TimeOut">TimeOut:</label>
                <input type="time" id="TimeOut" name="TimeOut" value="<%= staff[0]?staff[0].timeOut : '' %>" required>
            </div>

            <div class="actions "  >
                
                <button type="submit" class="btn">update</button>
                <a href="<%= prefixAdmin %>/Shift" class="btn btn-danger">Hủy</a>
            </div>
        </form>
    </div>
  
    
</main>