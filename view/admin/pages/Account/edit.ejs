<main  id="main" class="main">
    <div class="container">
        <h2><%=title%> </h2>
        <form action="<%= prefixAdmin %>/Account/edit/<%= staff[0].Manv %>?_method=PATCH"   method="post"  >
            <div class="form-group">
                <label for="manv">Mã NV:</label>
                <input type="text" id="manv" name="MANV" value="<%= staff[0] ?staff[0].Manv : '' %>"readonly>
            </div>

            <div class="form-group">
                <label for="name">Tên:</label>
                <input type="text" id="name" name="Name" value="<%= staff[0] ? staff[0].TenNv : '' %>" required>
            </div>

            <div class="form-group">
                <label for="office">Chức vụ:</label>
                <input type="text" id="office" name="office" value="<%= staff[0]?staff[0].Chucv : '' %>" required>
            </div>

            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="Username" value="<%= staff[0] ? staff[0].username : '' %>" required>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" value="<%= staff[0] ? staff[0].password : '' %>" required>
            </div>

            <div class="actions "  >
                
                <button type="submit" class="btn">update</button>
                <a href="<%= prefixAdmin %>/Account" class="btn btn-danger">Hủy</a>
            </div>
        </form>
    </div>
  
    
</main>