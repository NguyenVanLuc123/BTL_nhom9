 <!-- Basic Modal -->
 <div class="modal fade" id="modal" tabindex="-1" style="width: 500px;height: 680px; ">
    <div class="modal-dialog" style="margin: 0px;">
      <div class="modal-content">
        <div class="modal-body">
            <div >
                <h2>Tạo Ca Lam Việc </h2>
                <form action="<%= prefixAdmin %>/Shift/CreatShift"   method="post"  >
                    <div class="form-group">
                        <label for="MaC">Mã ca:</label>
                        <input type="text" id="MaC" name="MaC" value="" required>
                    </div>
        
                    <div class="form-group">
                        <label for="TenC">Tên ca:</label>
                        <input type="text" id="TenC" name="TenC" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="TimeIn">Time in:</label>
                        <input type="time" id="TimeIn" name="TimeIn" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="TimeOut">Time out:</label>
                        <input type="time" id="TimeOut" name="TimeOut" value="" required>
                    </div>
        
            
        
                    <div class="actions "  >
                        
                        <button type="submit" class="btn">Creat</button>
                        <a data-bs-dismiss="modal" class="btn btn-danger">Hủy</a>
                    </div>
                </form>
            </div>
          
        </div>
        
      </div>
    </div>
  </div><!-- End Basic Modal-->