  <!-- Basic Modal -->
  <div class="modal fade" id="modal<%= staff.MaC %>" tabindex="-1" style="width: 500px;height: 680px; ">
    <div class="modal-dialog" style="margin: 0px;">
      <div class="modal-content">
        <div class="modal-body">
            <div >
                <h2>Nhạp Thay Đổi </h2>
                <form action="<%= prefixAdmin %>/Shift/edit/<%= staff.MaC %>?_method=PATCH"   method="post"  >
                    <div class="form-group">
                        <label for="MaC">Mã Ca:</label>
                        <input type="text" id="MaC" name="MaC" value="<%= staff ? staff.MaC : '' %>"readonly>
                    </div>
        
                    <div class="form-group">
                        <label for="name">Tên Ca:</label>
                        <input type="text" id="name" name="Name" value="<%= staff ? staff.TenC : '' %>" required>
                    </div>
        
                    <div class="form-group">
                        <label for="TimeIn">TimeIn:</label>
                        <input type="time" id="TimeIn" name="TimeIn" value="<%= staff ? staff.timeIn : '' %>" required>
                    </div>
        
                    <div class="form-group">
                        <label for="TimeOut">TimeOut:</label>
                        <input type="time" id="TimeOut" name="TimeOut" value="<%= staff ? staff.timeOut : '' %>" required>
                    </div>
        
                    <div class="actions "  >
                        
                        <button type="submit" class="btn">update</button>
                        <a  data-bs-dismiss="modal" class="btn btn-danger">Hủy</a>
                    </div>
                </form>
            </div>
      
        </div>
        
      </div>
    </div>
  </div><!-- End Basic Modal-->















   