<main id="main" class="main">
  <% if (messages.Success) { %>
    <div class="alert alert-success" show-alert data-time="4000">
      <%= messages.Success %>
      <span close-alert style="margin-left: 25px; cursor: pointer;">X</span>
    </div>
  <% } %>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <table class="table datatable">
              <thead>
                <tr>
                  <th><b>MA Phong</b></th>
                  <th><b>Ten Phong</b></th>
                  <th><b>Manager</b></th>
                  <th><b>DayCreat</b></th>
                  <th><b>Action</b></th>
                </tr>
              </thead>
              <tbody>
                <% PhongBan.forEach(function(item) { %>
                  <tr>
                    <td><%= item.MaP %></td>
                    <td><%= item.TenP %></td>
                    <td>
                      <% 
                        const manager = staff.find(staffitem => staffitem.MaP === item.MaP && staffitem.Chucv === 'manager'); 
                        if (manager) { 
                      %>
                        <%= manager.TenNv %>
                      <% } else { %>
                        Không có
                      <% } %>
                    </td>
                    <td><%= item && item.DayCreat instanceof Date ? item.DayCreat.toISOString().split('T')[0] : '' %></td>
                    <td class="Hanh-dong">
                      <button type="button" data-id="<%= item.MaP %>" button-deleted class="btn btn-danger">delete</button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="add-user" style="margin-top: 30px;">
    <a href="<%=prefixAdmin %>/Department/CreatDepartment" class="btn btn-primary Add_Deperments">
      ADD DEPARTMENTS </a>
  </div>

  <form action="" method="post" id="form-deleted-button" data-path="<%= prefixAdmin %>/Department/deleted/"></form>
</main>
