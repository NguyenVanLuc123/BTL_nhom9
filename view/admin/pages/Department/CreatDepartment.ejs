<main  id="main" class="main">
    <% if (messages.error) { %>
        <div class="alert alert-danger" show-alert data-time="4000">
          <%= messages.error %>
          <span close-alert style="margin-left: 25px; cursor: pointer;">X</span>
        </div>
      <% } %>
    <div class="container">
        <h2><%=title%> </h2>
        <form action="<%= prefixAdmin %>/Department/CreatDepartment"   method="post"  >
            <div class="form-group">
                <label for="MaP">Mã Phòng Ban:</label>
                <input type="text" id="MaP" name="MaP" value="" required>
            </div>

            <div class="form-group">
                <label for="TenP">Tên Phòng:</label>
                <input type="text" id="TenP" name="TenP" value="" required>
            </div>

    

            <div class="actions "  >
                
                <button type="submit" class="btn">Creat</button>
                <a href="<%= prefixAdmin %>/Department" class="btn btn-danger">Hủy</a>
            </div>
        </form>
    </div>
  
    
</main>